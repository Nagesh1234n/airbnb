
<% layout("/layouts/boilerplate") %>

<h1 class="col-6 offset-3 mt-3">SignUp on wanderlust</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
 
    <form method="POST" action="signup" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="username" class="form-label">username</lable>
             <input name="username" id="username" placeholder="add username" type="text" class="form-control" required>
             <div class="valid-feedback">looks good!</div>
             
        </div>
        <div class="mb-3">
            <lable for="email" class="form-label">email</lable>
             <input name="email" id="email" placeholder="add email" type="text" class="form-control" required>
             
             
        </div>
        <div class="mb-3">
            <lable for="password" class="form-label">password</lable>
            <input name="password" id="password" placeholder="add password" type="text" class="form-control" required>
        </div>
        <button class="btn btn-success">SignUp</button>
    </form>    
</div>
</div>