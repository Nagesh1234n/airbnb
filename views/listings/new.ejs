
<% layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
         <!-- ofset -> left se space -->
        <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
             <input name="listing[title]" placeholder="add a catchy title" type="text" class="form-control" required>
             <div class="valid-feedback">Title looks good!</div>
             <div class="invalid-feedback">enter title</div>
        </div>
       
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" placeholder="type some text"type="text" class="form-control" required></textarea>
            <div class="valid-feedback">description looks good!</div>
             <div class="invalid-feedback">please enter a short description</div> 
        </div>
       
        <!-- <div class="mb-3">
            <lable for="image" class="form-label">Image</lable>
           <input name="listing[image]" placeholder="enter image URL/Link" type="text"class="form-control">
        </div> -->
        <!-- // -->
        <div class="mb-3">
            <lable for="image" class="form-label" required>Uplode Listing Image</lable>
           <input name="listing[image]" type="file"class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" placeholder="enter price" type="text" class="form-control" required>
            <div class="valid-feedback">Price looks good!</div>
             <div class="invalid-feedback">Price should be valid</div>
        </div>
       
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
            <div class="valid-feedback">country looks good!</div>
             <div class="invalid-feedback">Country name should be valid</div>
        </div>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
            <div class="valid-feedback"> Location</div>
             <div class="invalid-feedback">Location should be valid</div>
        </div>
       
       
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>

    </form>
</div>
</div>
</body>
